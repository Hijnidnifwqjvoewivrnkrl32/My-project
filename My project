  <button
    class="name"
    onclick="handleNameClick()"
  >
    What's your name?
  </button>
  <script>
    function handleNameClick() {
      const name = prompt("What's your name?");
      if (name) {
        alert('Nice to meet you, ' + name + '!');
      } else {
        alert('Nice to meet you, stranger');
      }
    }
  </script>
